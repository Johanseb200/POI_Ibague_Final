<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Notificaciones">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/notifications"
            android:title="Notificaciones"
            android:icon="@drawable/ic_notifications"/>
        <CheckBoxPreference
            app:dependency="@string/notifications"
            android:defaultValue="false"
            android:key="sound_notification"
            android:title="Activar sonido de notificaciones"
            android:icon="@drawable/ic_sound_notification"/>

    </PreferenceCategory>

</PreferenceScreen>